<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:key="smsactivated"
        android:title="Activate SMS Responder" />

    <!-- The visual style of a child is defined by this styled theme attribute. -->
    <EditTextPreference
        android:defaultValue="AUTOGENERATED:"
        android:dependency="smsactivated"
        android:key="answertext"
        android:layout="?android:attr/preferenceLayoutChild"
        android:title="Edit answer text" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:dependency="smsactivated"
        android:key="includestudent"
        android:layout="?android:attr/preferenceLayoutChild"
        android:title="Include student name" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:dependency="smsactivated"
        android:key="includelocation"
        android:layout="?android:attr/preferenceLayoutChild"
        android:title="Include network location" />

</PreferenceScreen>